<h1> Create Blogger </h1>

<% if flash[:message] %>
<h4 style= "color: red;"> <%= @blogger.errors.full_messages[0] %></h4>
<% end %>


<%= form_for @blogger do |f| %>
    <%= f.label:name%>
    <%= f.text_field :name %>
    <%= f.label:bio%>
    <%= f.text_field :bio %>
    <%= f.label:age%>
    <%= f.number_field :age %>
    <%= f.submit "Create Blogger" %>
<% end %>

